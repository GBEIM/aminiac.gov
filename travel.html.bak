        // Country Search & Selection
        const countrySearchInput = document.getElementById('countrySearchInput');
        const countryDropdown = document.getElementById('countryDropdown');
        const checkerResult = document.getElementById('checkerResult');
        const resultCountry = document.getElementById('resultCountry');
        const resultText = document.getElementById('resultText');
        const resultFlag = document.getElementById('resultFlag');
        const visaStatusBadge = document.getElementById('visaStatusBadge');

        let filteredCountries = [];

        // Show dropdown when input is focused
        countrySearchInput.addEventListener('focus', () => {
            if (countrySearchInput.value.trim() === '') {
                displayCountries(countries);
            }
        });

        // Filter countries as user types
        countrySearchInput.addEventListener('input', (e) => {
            const query = e.target.value.toLowerCase().trim();
            
            if (query === '') {
                displayCountries(countries);
            } else {
                filteredCountries = countries.filter(country => 
                    country.name.toLowerCase().includes(query)
                );
                displayCountries(filteredCountries);
            }
        });

        // Display countries in dropdown
        function displayCountries(countryList) {
            if (countryList.length === 0) {
                countryDropdown.innerHTML = '<div class="no-results">No countries found</div>';
                countryDropdown.classList.add('show');
                return;
            }

            countryDropdown.innerHTML = countryList.map(country => `
                <div class="country-option" data-country='${JSON.stringify(country)}'>
                    <img src="https://flagcdn.com/w40/${country.code}.png" class="country-flag" alt="${country.name}" onerror="this.style.display='none'">
                    <span class="country-name">${country.name}</span>
                </div>
            `).join('');

            countryDropdown.classList.add('show');

            // Add click event to each option
            document.querySelectorAll('.country-option').forEach(option => {
                option.addEventListener('click', () => {
                    const country = JSON.parse(option.getAttribute('data-country'));
                    selectCountry(country);
                });
            });
        }

        // Select a country and show result
        function selectCountry(country) {
            countrySearchInput.value = country.name;
            countryDropdown.classList.remove('show');
            
            // Update result display
            resultCountry.textContent = country.name;
            resultFlag.src = `https://flagcdn.com/w80/${country.code}.png`;
            resultFlag.alt = country.name;
            resultText.textContent = country.text;

            if (country.status === 'visa-free') {
                visaStatusBadge.textContent = '✓ Visa Not Required';
                visaStatusBadge.className = 'visa-status-badge visa-free';
            } else {
                visaStatusBadge.textContent = '✗ Visa Required';
                visaStatusBadge.className = 'visa-status-badge visa-required';
            }

            checkerResult.classList.add('show');
            
            // Smooth scroll to result
            setTimeout(() => {
                checkerResult.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
            }, 100);
        }

        // Close dropdown when clicking outside
        document.addEventListener('click', (e) => {
            if (!e.target.closest('.search-wrapper')) {
                countryDropdown.classList.remove('show');
            }
        });

        // Site Search Functionality
        const siteContent = [
            { title: "Tourist Visa", type: "Travel", desc: "Apply for short-term tourist visa.", url: "#visa-services" },
            { title: "Visa Requirements", type: "Travel", desc: "Check if you need a visa.", url: "#visa-services" },
            { title: "Passport Services", type: "Travel", desc: "Apply or renew passports.", url: "#passport-services" },
            { title: "Travel Advisories", type: "Travel", desc: "Safety information for travelers.", url: "#travel-advisories" },
            { title: "Customs Regulations", type: "Travel", desc: "Border control information.", url: "#customs" },
            { title: "Health Requirements", type: "Travel", desc: "Vaccination and health info.", url: "#health" }
        ];

        const searchOverlay = document.getElementById('searchOverlay');
        const searchInput = document.getElementById('searchInput');
        const searchResults = document.getElementById('searchResults');
        
        function openSearch(query = '') {
            searchOverlay.classList.add('active');
            searchInput.value = query;
            searchInput.focus();
            if(query) performSearch(query);
        }

        function closeSearch() {
            searchOverlay.classList.remove('active');
            searchResults.innerHTML = '';
        }

        function performSearch(query) {
            const lowerQuery = query.toLowerCase();
            const filtered = siteContent.filter(item => 
                item.title.toLowerCase().includes(lowerQuery) || item.desc.toLowerCase().includes(lowerQuery)
            );
            searchResults.innerHTML = filtered.length > 0 ? filtered.map(item => `
                <a href="${item.url}" class="result-item">
                    <span class="result-tag">${item.type}</span>
                    <div class="result-title">${item.title}</div>
                    <div class="result-desc">${item.desc}</div>
                </a>
            `).join('') : '<p style="text-align:center; padding:20px;">No results found.</p>';
        }

        document.getElementById('desktopSearchTrigger').onclick = () => openSearch();
        document.getElementById('searchClose').onclick = closeSearch;
        searchInput.oninput = (e) => performSearch(e.target.value);
        document.addEventListener('keydown', (e) => { if (e.key === 'Escape') closeSearch(); });

        // Mobile Search
        document.getElementById('mobileSearchBtn').onclick = () => {
            openSearch(document.getElementById('mobileSearchInput').value);
        };

        // Navigation
        const hamburger = document.getElementById('hamburger');
        const navMenu = document.getElementById('nav-menu');
        hamburger.onclick = () => navMenu.classList.toggle('active');

        const langBtn = document.querySelector('.lang-btn');
        const langMenu = document.querySelector('.lang-menu');
        if(langBtn) { 
            langBtn.onclick = () => {
                langMenu.classList.toggle('active');
                langBtn.setAttribute('aria-expanded', langMenu.classList.contains('active'));
            };
        }

        // Back to Top
        const backToTopBtn = document.getElementById("backToTop");
        window.onscroll = () => {
            if (window.scrollY > 300) backToTopBtn.classList.add("show");
            else backToTopBtn.classList.remove("show");
        };
        backToTopBtn.onclick = () => window.scrollTo({ top: 0, behavior: 'smooth' });
