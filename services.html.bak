    <script>
        // --- Search Functionality ---
        const siteContent = [
            { title: "National Insurance", type: "Service", desc: "Apply, check contributions, and claim benefits.", url: "#national-insurance" },
            { title: "Tax Payment", type: "Service", desc: "File income tax and pay outstanding taxes.", url: "#tax-payment" },
            { title: "Employment Services", type: "Service", desc: "Job search, training, and unemployment benefits.", url: "#employment" },
            { title: "Cost of Living Support", type: "Service", desc: "Energy subsidies, housing, and food assistance.", url: "#cost-of-living" },
            { title: "Social Benefits", type: "Service", desc: "Income support and family benefits.", url: "#social-benefits" },
            { title: "Contact Government", type: "Contact", desc: "Get in touch.", url: "/contact" }
        ];

        const searchOverlay = document.getElementById('searchOverlay');
        const desktopSearchTrigger = document.getElementById('desktopSearchTrigger');
        const searchClose = document.getElementById('searchClose');
        const searchInput = document.getElementById('searchInput');
        const searchResults = document.getElementById('searchResults');
        
        const mobileSearchInput = document.getElementById('mobileSearchInput');
        const mobileSearchBtn = document.getElementById('mobileSearchBtn');

        function openSearch(initialQuery = '') {
            searchOverlay.classList.add('active');
            searchInput.value = initialQuery;
            searchInput.focus();
            if(initialQuery) performSearch(initialQuery);
        }

        function closeSearch() {
            searchOverlay.classList.remove('active');
            searchInput.value = '';
            searchResults.innerHTML = '';
        }

        function performSearch(query) {
            const lowerQuery = query.toLowerCase();
            const filtered = siteContent.filter(item => 
                item.title.toLowerCase().includes(lowerQuery) || 
                item.desc.toLowerCase().includes(lowerQuery)
            );

            searchResults.innerHTML = filtered.length > 0 ? filtered.map(item => `
                <a href="${item.url}" class="result-item">
                    <span class="result-tag">${item.type}</span>
                    <div class="result-title">${item.title}</div>
                    <div class="result-desc">${item.desc}</div>
                </a>
            `).join('') : '<div style="text-align:center; color:#666; padding:20px;">No results found.</div>';
            
            if(query === '') searchResults.innerHTML = '';
        }

        desktopSearchTrigger.addEventListener('click', () => openSearch());
        searchClose.addEventListener('click', closeSearch);
        searchInput.addEventListener('input', (e) => performSearch(e.target.value));
        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape') closeSearch();
        });

        mobileSearchBtn.addEventListener('click', () => {
            const query = mobileSearchInput.value;
            if(query) openSearch(query);
        });
        
        mobileSearchInput.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') {
                e.preventDefault();
                openSearch(mobileSearchInput.value);
            }
        });

        // --- Hamburger Menu ---
        const hamburger = document.getElementById('hamburger');
        const navMenu = document.getElementById('nav-menu');
        const langBtn = document.querySelector('.lang-btn');
        const langMenu = document.querySelector('.lang-menu');

        hamburger.addEventListener('click', () => {
            navMenu.classList.toggle('active');
        });

        document.querySelectorAll('.nav-link').forEach(n => n.addEventListener('click', () => {
            navMenu.classList.remove('active');
        }));

        if(langBtn) {
            langBtn.addEventListener('click', () => {
                langMenu.classList.toggle('active');
                const expanded = langBtn.getAttribute('aria-expanded') === 'true' || false;
                langBtn.setAttribute('aria-expanded', !expanded);
            });

            document.addEventListener('click', (e) => {
                if (!langBtn.contains(e.target) && !langMenu.contains(e.target)) {
                    langMenu.classList.remove('active');
                    langBtn.setAttribute('aria-expanded', 'false');
                }
            });
        }

        // --- Back to Top ---
        const backToTopBtn = document.getElementById("backToTop");

        window.addEventListener('scroll', () => {
            if (window.scrollY > 300) {
                backToTopBtn.classList.add("show");
            } else {
                backToTopBtn.classList.remove("show");
            }
        });

        backToTopBtn.addEventListener('click', () => {
            window.scrollTo({ top: 0, behavior: 'smooth' });
        });

        // --- Smooth scroll for quick access links ---
        document.querySelectorAll('.quick-link-btn').forEach(link => {
            link.addEventListener('click', (e) => {
                const href = link.getAttribute('href');
                if(href.startsWith('#')) {
                    e.preventDefault();
                    const target = document.querySelector(href);
                    if(target) {
                        target.scrollIntoView({ behavior: 'smooth', block: 'start' });
                    }
                }
            });
        });
    </script>
